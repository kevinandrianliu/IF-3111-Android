<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/registerEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Enter your E-mail" />

        <EditText
            android:id="@+id/registerEmailValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerEmailText"
            android:backgroundTint="@color/mainAppColor"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/default_cursor" />

        <TextView
            android:id="@+id/registerPasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerEmailValue"
            android:layout_marginStart="3dp"
            android:text="Enter your password" />

        <EditText
            android:id="@+id/registerPasswordValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerPasswordText"
            android:backgroundTint="@color/mainAppColor"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/default_cursor" />

        <TextView
            android:id="@+id/registerRetypePasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerPasswordValue"
            android:layout_marginStart="3dp"
            android:text="Retype your password" />

        <EditText
            android:id="@+id/registerRetypePasswordValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerRetypePasswordText"
            android:backgroundTint="@color/mainAppColor"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/default_cursor" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerRetypePasswordValue"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:text="Register" />
    </RelativeLayout>

</RelativeLayout>