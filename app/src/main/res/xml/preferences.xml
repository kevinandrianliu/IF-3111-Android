<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="theme_option"
        android:summary="@string/theme_app"
        android:title="@string/switch_title"/>
    <ListPreference
        android:defaultValue="O"
        android:entries="@array/theme_color_titles"
        android:entryValues="@array/theme_color_values"
        android:key="theme_color"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/theme_color_title"
        android:summary="@string/theme_app"/>
</PreferenceScreen>